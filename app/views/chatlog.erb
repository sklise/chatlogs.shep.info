<h1><%= "#{params[:year]}/#{params[:month]}/#{params[:date]}" %></h1>

<table>
  <tbody>
<% @messages["#{params[:year]}-#{params[:month]}-#{params[:date].to_i}"].each do |message| %>
  <tr>
    <td class="time"><%= DateTime.strptime( "#{message["timestamp"]/1000-14400}", "%s").strftime("%I:%M") %></td>
    <td class="sender"><%= message["sender"] %></td>
    <td class="message"><%= message["message"] %></td>
  </tr>
<% end %>
  </tbody>
</table>